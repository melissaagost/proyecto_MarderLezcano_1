<Page x:Class="proyecto_MarderLezcano.Views.FormularioInicioSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyecto_MarderLezcano.Views"
        mc:Ignorable="d"
        Title="MediLink" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- TextBox para el Usuario -->
            <Grid>
                <TextBox x:Name="UsernameTextBox" Width="200" Margin="10"/>
                <TextBlock Text="Usuario" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Gray"/>
            </Grid>
            <!-- TextBox para la Contraseña -->
            <Grid>
                <PasswordBox x:Name="PasswordBox" Width="200" Margin="10"/>
                <TextBlock Text="Contraseña" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="Gray"/>
            </Grid>
            <!-- Botones -->
            <Button Content="Ingresar" Width="200" Margin="10" Command="{Binding IniciarSesionCommand}"/>
            <Button Content="Editar Contraseña" Width="200" Margin="10" Command="{Binding EditarContraseñaCommand}"/>
        </StackPanel>
    </Grid>
</Page>
