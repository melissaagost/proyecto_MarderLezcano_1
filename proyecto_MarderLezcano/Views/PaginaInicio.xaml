<Window x:Class="proyecto_MarderLezcano.Views.PaginaInicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:proyecto_MarderLezcano.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyecto_MarderLezcano.Views"
        mc:Ignorable="d"
        Title="MediLink" Height="450" Width="800">
    <Window.DataContext>
        <!-- Enlaza la vista con su ViewModel correspondiente -->
        <vm:PaginaInicioVM />
    </Window.DataContext>
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <Button Content="Iniciar Sesión" 
                Width="120" 
                Height="40" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Command="{Binding IniciarSesionCommand}"/>
    </Grid>
</Window>
